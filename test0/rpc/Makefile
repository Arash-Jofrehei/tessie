
# This is a template Makefile generated by rpcgen

# Parameters

CLIENT = trpc_client
SERVER = trpc_server

SOURCES_CLNT.c =
SOURCES_CLNT.h =
SOURCES_SVC.c =
SOURCES_SVC.h =
SOURCES.x = trpc.x

TARGETS_SVC.c = trpc_svc.c trpc_server.c trpc_xdr.c
TARGETS_CLNT.c = trpc_clnt.c trpc_client.c trpc_xdr.c trpc.c
TARGETS = trpc.h trpc_xdr.c trpc_clnt.c trpc_svc.c trpc_client.c trpc_server.c

OBJECTS_CLNT = $(SOURCES_CLNT.c:%.c=%.o) $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_SVC = $(SOURCES_SVC.c:%.c=%.o) $(TARGETS_SVC.c:%.c=%.o)
# Compiler flags

CFLAGS += -g -O0 -W -Wall -fPIC -pipe
#LDLIBS += -lnsl
LDLIBS += $(CXXFLAGS)
RPCGENFLAGS =

# Targets

all : $(CLIENT) $(SERVER)

lib:
	$(CC)  $(LDFLAGS) trpc_clnt.o trpc_server.o trpc.o -o librpc.so

$(TARGETS) : $(SOURCES.x)
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLNT) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h) $(TARGETS_CLNT.c)

$(OBJECTS_SVC) : $(SOURCES_SVC.c) $(SOURCES_SVC.h) $(TARGETS_SVC.c)

$(CLIENT) : $(OBJECTS_CLNT)
	$(LINK.c) -o $(CLIENT) $(OBJECTS_CLNT) $(LDLIBS)

$(SERVER) : $(OBJECTS_SVC)
	$(LINK.c) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS)

 clean:
	 $(RM) *.o *~ trpc_client trpc_server
